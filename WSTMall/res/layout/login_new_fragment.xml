<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res/com.zhy_9.food_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    <com.wstmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/app_name"
        showu:right_visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/login_top_logo"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_margin="10dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_margin="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo2"
            android:layout_margin="10dp"/>





    </LinearLayout>
    <EditText
        android:id="@+id/fragment_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:textColorHint="#aaaaaa"
        android:drawableLeft="@drawable/user_name_icon"
        android:layout_below="@+id/login_top_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:drawablePadding="5dp"
        android:background="@drawable/login_selector"
        android:paddingBottom="12dp"/>
    <EditText
        android:id="@+id/fragment_login_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_login_name"
        android:layout_margin="10dp"
        android:hint="密码"
        android:textColorHint="#aaaaaa"
        android:drawableLeft="@drawable/login_password_icon"
        android:drawablePadding="5dp"
        android:background="@drawable/login_selector"
        android:paddingBottom="12dp"/>

    <EditText
        android:id="@+id/login_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_login_psw"
        android:layout_margin="10dp"
        android:hint="验证码"
        android:textColorHint="#aaaaaa"
        android:drawableLeft="@drawable/login_verify_icon"
        android:drawablePadding="5dp"
        android:background="@drawable/login_selector"
        android:paddingBottom="12dp"/>

    <Button
        android:id="@+id/fragment_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_verify_code"
        android:text="登 录"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button"
        android:layout_margin="10dp"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/back_to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:layout_below="@+id/fragment_login_login"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/login_home_icon"
        android:drawablePadding="5dp"/>

    <TextView
        android:id="@+id/fragment_login_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:textColor="#000000"
        android:layout_below="@+id/fragment_login_login"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/fragment_login_forget"/>

    <TextView
        android:id="@+id/fragment_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| 忘记密码"
        android:layout_below="@+id/fragment_login_login"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/special_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_to_home"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#c1c1c1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特色服务"
            android:textSize="20sp"
            android:textColor="#c1c1c1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#c1c1c1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"/>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/special_service"
        android:src="@drawable/bg"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
